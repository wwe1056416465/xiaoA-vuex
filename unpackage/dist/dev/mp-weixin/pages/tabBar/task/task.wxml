<view class="content" bind:__l="__l"><mix-pulldown-refresh class="vue-ref" top="{{0}}" data-ref="mixPulldownRefresh" data-event-opts="{{[['^refresh',[['onPulldownReresh']]]]}}" bind:refresh="__e" vue-slots="{{['default']}}"><view class="scroll-wrapper"><block wx:for="{{list}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="taskList"><view data-event-opts="{{[['tap',[['showTip',['$0','$1','$2'],[[['list','',index,'id']],[['list','',index,'status']],[['list','',index,'failurenum']]]]]]]}}" class="task_block" bindtap="__e"><view class="task_title"><view class="text">{{item.jobname}}</view><view hidden="{{!(item.status==1)}}" class="task_suess bg_stop">待启动</view><view hidden="{{!(item.status==2)}}" class="task_suess bg_blue">正在发送</view><view hidden="{{!(item.status==3)}}" class="task_suess bg_start">暂停发送</view><view hidden="{{!(item.status==4)}}" class="task_suess bg_complete">发送完成</view></view><view class="jindutiao"><view class="progress-box"><progress style="border-radius:10px;" percent="{{item.percent}}" activeColor="#3690FF" active stroke-width="5"></progress></view><view class="tip">进度<text>{{item.completed+"/"+item.total}}</text></view></view><view class="task_con"><view class="starttime"><text>开始时间 ：</text><text>{{item.createddate||'----'}}</text></view><view class="endtime"><text>结束时间 ：</text><text>{{item.finishtime||'----'}}</text></view><view class="user"><text>创建人 ：</text><text>{{item.createdby}}</text></view><view class="child"><text>子账号 ：</text><text>{{item.contactsuffix}}</text></view></view></view><view class="space10"></view></view></block><mix-load-more status="{{loadMoreStatus}}"></mix-load-more></view></mix-pulldown-refresh><view class="addTack"><view data-event-opts="{{[['tap',[['task_add',['$event']]]]]}}" class="task_add" bindtap="__e">+</view></view><view class="addTack scerch"><view data-event-opts="{{[['tap',[['task_scerch',['$event']]]]]}}" class="task_scerch " bindtap="__e"></view></view><popup-layer class="vue-ref" direction="{{direction}}" page="{{taskPage}}" data-ref="popup" vue-slots="{{['default']}}"><view class="zidingyi"><button class="caozuobtn" data-type="analyze" data-event-opts="{{[['tap',[['caozuobtn',['$event']]]]]}}" bindtap="__e">任务分析</button><button class="caozuobtn" data-type="stop" data-event-opts="{{[['tap',[['caozuobtn',['$event']]]]]}}" bindtap="__e">暂停任务</button><button class="caozuobtn" data-type="continue" data-event-opts="{{[['tap',[['caozuobtn',['$event']]]]]}}" bindtap="__e">继续任务</button><button class="caozuobtn" data-type="failCall" data-event-opts="{{[['tap',[['caozuobtn',['$event']]]]]}}" bindtap="__e">失败重呼</button><button class="caozuobtn" style="color:red;" data-type="delete" data-event-opts="{{[['tap',[['caozuobtn',['$event']]]]]}}" bindtap="__e">删除任务</button><button class="caozuobtn" style="margin:10px 0;color:#09BB07;" data-type="cancel" data-event-opts="{{[['tap',[['caozuobtn',['$event']]]]]}}" bindtap="__e">取消</button></view></popup-layer></view>